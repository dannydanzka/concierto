<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Nombre del Concierto -->
    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingrese_nombre"
        android:inputType="text"
        android:textSize="18sp"/>

    <!-- Fecha del Concierto -->
    <EditText
        android:id="@+id/input_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingrese_fecha"
        android:inputType="date"
        android:layout_marginTop="12dp"
        android:textSize="18sp"/>

    <!-- Lugar del Concierto -->
    <EditText
        android:id="@+id/input_lugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingrese_lugar"
        android:layout_marginTop="12dp"
        android:textSize="18sp"/>

    <!-- Precio del Concierto -->
    <EditText
        android:id="@+id/input_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ingrese_precio"
        android:inputType="numberDecimal"
        android:layout_marginTop="12dp"
        android:textSize="18sp"/>

    <!-- Selección de Género -->
    <Spinner
        android:id="@+id/spinner_genero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <!-- Botones -->
    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/registrar"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        android:background="@color/teal_700"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buscar"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:background="@color/purple_500"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btn_limpiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/limpiar"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:background="@color/teal_200"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_eliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/eliminar"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:background="@color/purple_700"
        android:textColor="@color/white"/>

</LinearLayout>
